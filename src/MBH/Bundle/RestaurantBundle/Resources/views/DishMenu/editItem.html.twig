{% extends 'MBHRestaurantBundle:DishMenu:layout.html.twig' %}

{% set small_title = "редактирование блюда в категории <" ~ entity.name ~ ">" %}
{% set layout = 'box' %}

{% block content %}
{#{% form_theme form '@MBHRestaurant/Form/amount.html.twig' %}#}
    {{ form_start(form, {'action': path('restaurant_dishmenu_item_edit', {'id': entry.id}), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
    {% include '@MBHRestaurant/DishMenu/dishItemsTemplate.html.twig' %}
    {% if entry.system is defined and entry.system %}
        {% include 'MBHBaseBundle:Actions:update.html.twig' with {'entity': entry } %}
    {% else %}
        {% include 'MBHBaseBundle:Actions:update.html.twig' with {'entity': entry, 'delete_route': 'restaurant_dishmenu_item_delete', 'delete_role':'ROLE_RESTAURANT_DISHMENU_ITEM_DELETE' } %}
    {% endif %}

    {{ form_widget(form._token) }}
    {{ form_end(form, {render_rest: false}) }}

    {% include 'MBHBaseBundle:Partials:entityInfo.html.twig' with {'entity': entry, 'logs': logs, 'delete_route': 'restaurant_dishmenu_item_delete' } %}

{% endblock %}

{% block scripts %}
    {{ parent() }}
    {% javascripts filter='uglifyjs2'
    '@MBHRestaurantBundle/Resources/public/js/002-calculate-costprice.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% include '@MBHRestaurant/DishMenu/dishMenuScripts.html.twig' with {'ingredients' : ingredients} %}
{% endblock scripts %}

