
    <div class="spacer-top">

        {% set selectedTariff = app.request.query.get('s').tariff|default(null) %}

        {% if tariffResults != false and tariffResults is iterable and tariffResults|length != 0 %}

            <div class="panel panel-default package-search-tariffs">
                <div class="panel-heading">{{ "search.results.tariff_search"|trans({}, "MBHPackageBundle") }}<div class="text-right pull-right"><small><span class="text-success">{{ "search.results.green"|trans({}, "MBHPackageBundle") }}</span>{{ "search.results.main_tariffs"|trans({}, "MBHPackageBundle") }} </small><small>&nbsp; <span class="text-primary">{{ "search.results.blue"|trans({}, "MBHPackageBundle") }}</span>{{ "search.results.special_tariffs"|trans({}, "MBHPackageBundle") }}</small></div></div>
                <div class="panel-body">

                    {% for tariffResult in tariffResults  %}

                        <ul id="package-search-tariffs">
                            <li>
                                <a href="#" {% if tariffResult.isDefault %}class="text-success"{% else %}data-id="{{ tariffResult.id }}{% endif %}">
                                    {% if selectedTariff == tariffResult.id or (selectedTariff is empty and tariffResult.isDefault)  %} <small><i class="fa fa-check"></i></small> {% endif %}
                                    {{ tariffResult }} <small>({{ tariffResult.hotel }})</small>
                                </a>
                            </li>
                        </ul>
                    {% endfor %}
                </div>
            </div>
        {% endif %}

        {% if results != false %}

            <table class="package-search-table table table-striped table-hover table-condensed table-icons table-actions">
                <thead>
                <tr>
                    <th class="td-xxs"></th>
                    <th class="td-md">{{ "search.results.dates"|trans({}, "MBHPackageBundle") }}</th>
                    <th>{{ "search.results.hotel"|trans({}, "MBHPackageBundle") }}</th>
                    <th>{{ "search.results.type"|trans({}, "MBHPackageBundle") }}</th>
                    <th class="td-sm">{{ "search.results.room"|trans({}, "MBHPackageBundle") }}</th>
                    <th class="td-sm">{{ "search.results.guests"|trans({}, "MBHPackageBundle") }}</th>
                    <th class="td-md">{{ "search.results.price"|trans({}, "MBHPackageBundle") }}</th>
                    <th class="td-md"></th>
                </tr>
                </thead>
                <tbody>

                {% for result in results  %}

                    <tr>
                        <td class="text-center table-icon"><i class="fa fa-paper-plane-o"></i></td>
                        <td>{{ result.begin|mbh_format }} - {{ result.end|mbh_format }}<br><small>{{ plural(result.nights, "package.json.noch"|trans({}, "MBHPackageBundle"), "package.json.nochi"|trans({}, "MBHPackageBundle"), "package.json.nochei"|trans({}, "MBHPackageBundle")) }}</small></td>
                        <td>{{ result.roomType.hotel }}</td>
                        <td>
                            {{ result.roomType }}<br>
                            <small>
                                {{ "search.results.total"|trans({}, "MBHPackageBundle") }}:
                                <span class="package-search-book-count">{{ result.roomsCount }}</span>
                            </small>
                        </td>
                        <td>
                            <select class="form-control input-sm search-room-select">
                                <option></option>
                                {% for room in  result.rooms %}
                                    <option value="{{ room.id }}">
                                        {{ room }}
                                    </option>
                                {% endfor %}
                            </select>
                        </td>
                        <td class="text-center">
                            <select class="form-control plain-html input-sm search-tourists-select">
                                {% for priceTourists, price  in result.prices %}
           
                                    {% set arr = priceTourists|split('_') %}
                                    <option value="{{ priceTourists }}">
                                        {% if arr[0] %}{% for i in 1..arr[0] %}A&nbsp;{% endfor %}{% endif %}
                                        {% if arr[1] %}{% for k in 1..arr[1] %}C&nbsp;{% endfor %}{% endif %}
                                    </option>
                                {% endfor %}
                            </select>
                        </td>
                        <td class="text-right">
                            {% for priceTourists, price  in result.prices %}
                                <ul class="package-search-prices">
                                    <li class="{{ priceTourists }}_price">{{ price|number_format(2)}}</li>
                                </ul>
                            {% endfor %}
                            <small><i class='fa fa-sliders'> </i> {{ result.tariff.name }}</small>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('package_new', app.request.get('s')|merge({roomType: result.roomType.id })) }}" target="_blank" class="btn btn-success btn-xs package-search-book" title="Бронировать номер. Всего номеров: {{ result.roomsCount }}" data-toggle="tooltip">
                                <span class="package-search-book-reservation-text">{{ "search.results.reservate"|trans({}, "MBHPackageBundle") }}</span>
                                <span class="package-search-book-accommodation-text" style="display: none;">{{ "search.results.accommodation"|trans({}, "MBHPackageBundle") }}</span>
                            </a>
                        </td>
                    </tr>
                {% endfor  %}
                </tbody>
            </table>

        {% elseif results is iterable and results|length == 0 %}
            <div class="alert alert-warning"><i class="fa fa-exclamation-circle"> </i> {{ "search.results.nothing_found_for_your_request"|trans({}, "MBHPackageBundle") }}</div>
        {% else %}
            <div class="alert alert-info"><i class="fa fa-search"> </i> {{ "search.results.enter_search_data"|trans({}, "MBHPackageBundle") }} </div>
        {% endif %}
</div>