{% extends 'MBHPackageBundle:Package:layout.html.twig' %}

{% set small_title =  'package.edit.edit_reservation'|trans({}, 'MBHPackageBundle') ~ package.numberWithPrefix %}

{% if package.deletedAt %}{% set small_title = small_title ~ ' - <span class="text-danger">'~'package.edit.deleted'|trans({}, 'MBHPackageBundle')~'</span>' %}{% endif %}

{% block content %}

    {% include 'MBHPackageBundle:Package:orderPackages.html.twig' with {'entity': package} %}

    {% include 'MBHPackageBundle:Package:editTabs.html.twig' with {'active': 7 , 'entity': package} %}

    <div class="tab-content">
        <div class="tab-pane active" id="home">

            <div class="alert alert-warning">
                <i class="fa fa-ruble"></i>
                {{ 'order.cash.paid_price'|trans({}, 'MBHPackageBundle') }} {{ entity.paid|number_format(2) }} / {{ entity.price|number_format(2) }}
                &nbsp;
                {% if entity.isPaid %}
                    <small class="text-success"><i class="fa fa-check"> </i> {{ 'order.cash.paid'|trans({}, 'MBHPackageBundle') }}</small>
                {% else %}
                    <small class="text-danger"><i class="fa fa-times"> </i> {{ 'order.cash.not_paid'|trans({}, 'MBHPackageBundle') }}</small>
                {% endif %}
            </div>

            {% if docs|length %}
                <table id="cash-package-table" class="table not-auto-datatable table-striped table-hover table-condensed table-icons table-actions">
                    <thead>
                    <tr>
                        <th class="td-xs"></th>
                        <th class="td-xs"></th>
                        <th class="td-md">{{ 'order.cash.payer'|trans({}, 'MBHPackageBundle') }}</th>
                        <th class="td-md text-center">{{ 'order.cash.income'|trans({}, 'MBHPackageBundle') }}</th>
                        <th class="td-md text-center">{{ 'order.cash.outcome'|trans({}, 'MBHPackageBundle') }}</th>
                        <th class="td-md">{{ 'order.cash.operation_type'|trans({}, 'MBHPackageBundle') }}</th>
                        <th class="td-md">{{ 'order.cash.date'|trans({}, 'MBHPackageBundle') }}</th>
                        <th class="td-md text-center">{{ 'order.cash.is_paid'|trans({}, 'MBHPackageBundle') }}</th>
                        <th class="td-md">{{ 'order.cash.removed'|trans({}, 'MBHPackageBundle') }}</th>
                        <th class="td-md"></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cash in docs %}
                        {% set data = clientConfig.getFormData(cash, url('online_form_check_order')) %}
                        <tr class="{{ cash.isConfirmed is empty and cash.isPaid ? 'info' }} {{ cash.deletedAt ? 'danger' }} {{ cash.isPaid is empty ? 'transparent-tr' }} {% if cash.operation == 'in' and cash.deletedAt is empty and cash.method == 'electronic' and not cash.isPaid and not(data.disabled is defined and data.disabled) %} visa-tr {% endif %}">
                            <td class="text-center"><i class='fa fa-ruble'></i></td>
                            <td>{{ cash.number }}</th>
                            <td>{{ cash.payer }}</td>
                            <td class="text-right">
                                {% if cash.operation not in ['fee', 'out'] %}
                                    <a target="_blank" href='{{ path('cash_edit', { 'id': cash.id }) }}' {{ is_granted('ROLE_BOOKKEEPER') ? 'rel="main"' }} class='text-success' title='{{ 'order.cash.edit_record'|trans({}, 'MBHPackageBundle') }}' data-toggle='tooltip'>
                                        {{ cash.total|number_format(2) }}
                                    </a>
                                {% endif %}
                            </td>
                            <td class="text-right">
                                {% if cash.operation in ['fee', 'out'] %}
                                    <a target="_blank" href='{{ path('cash_edit', { 'id': cash.id }) }}' {{ is_granted('ROLE_BOOKKEEPER') ? 'rel="main"' }} class='text-danger' title='{{ 'order.cash.edit_record'|trans({}, 'MBHPackageBundle') }}' data-toggle='tooltip'>
                                        {{ cash.total|number_format(2) }}
                                    </a>
                                {% endif %}
                            </td>
                            <td>{{ operations[cash.operation] }}<br><small>{{ methods[cash.method] }}</small></td>
                            <td>{{ cash.documentDate|date('d.m.Y') }}</td>
                            <td class="text-center">{% if cash.isPaid is empty %}<span class="label label-danger">{{ 'order.cash.no'|trans({}, 'MBHPackageBundle') }}</span>{% else %} {{ cash.paidDate|date('d.m.Y') }} {% endif %}</td>
                            <td>{% if cash.deletedAt %}{{ cash.deletedAt|date('d.m.Y') }}{% endif %}</td>
                            <td class="table-actions-td text-right">
                                {% if checkPackagePermissions(entity) and not cash.deletedAt %}
                                    {% if cash.orderDocument %}
                                        <a href="{{ path('order_document_view', {name: cash.orderDocument.name, download: 1}) }}" class="btn btn-info btn-xs" title="" data-toggle="tooltip" data-original-title="Скачать">
                                            <i class="fa fa-download"></i>
                                        </a>
                                    {% endif %}
                                    {% if not cash.isConfirmed and cash.isPaid and is_granted('ROLE_BOOKKEEPER') %}
                                        <a data-action='cashDocumentConfirmation' data-header='{{ 'order.cash.confirm_payment'|trans({}, 'MBHPackageBundle') }}' data-text='{{ 'order.cash.are_you_sure_to_confirm_payment'|trans({}, 'MBHPackageBundle') }} <b>{{ cash.total|number_format }} RUR</b>?' data-button='{{ 'order.cash.confirm'|trans({}, 'MBHPackageBundle') }}' data-button-icon='fa-check' data-button-class='primary' href='{{ path('cash_confirm', { 'id': cash.id}) }}' class='btn btn-primary btn-xs delete-link' title='{{ 'order.cash.confirm_payment'|trans({}, 'MBHPackageBundle') }}' data-toggle='tooltip'>
                                            <i class='fa fa-check'></i>
                                        </a>
                                    {% endif %}
                                    {% if not cash.isPaid %}
                                        {% if cash.operation == 'in' and cash.method == 'electronic' %}
                                            {% if clientConfig and clientConfig.paymentSystem %}
                                                {% include 'MBHClientBundle:PaymentSystem:' ~ clientConfig.paymentSystem ~ '.html.twig' with {'data': data|merge({'buttonClasses': 'btn-xs', 'test': false})} %}
                                            {% endif %}
                                        {% endif %}
                                    {% endif %}
                                    {% if is_granted('ROLE_BOOKKEEPER') %}
                                    <a target="_blank" href="{{ path('cash_edit', { 'id': cash.id }) }}" class="btn btn-success btn-xs" title="{{ 'order.cash.edit_record'|trans({}, 'MBHPackageBundle') }}" data-toggle="tooltip">
                                        <i class="fa fa-pencil-square-o"></i>
                                    </a>
                                    {% endif %}
                                    {% if not cash.deletedAt %}
                                    <a href="{{ path('package_order_cash_delete', { 'id': entity.id, 'cash': cash.id, 'packageId': package.id }) }}" class="btn btn-danger btn-xs delete-link " title="{{ 'order.cash.remove_record'|trans({}, 'MBHPackageBundle') }}" data-toggle="tooltip">
                                        <i class="fa fa-trash-o"></i>
                                    </a>
                                    {% endif %}
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <div class="alert alert-warning alert-danger">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="fa fa-exclamation-circle"></i>
                    {{ 'order.cash.cash_documents_not_found'|trans({}, 'MBHPackageBundle') }}
                </div>
            {% endif %}

            {{ form_start(form, {'action': path('package_order_cash', {'id': entity.id, 'packageId': package.id}), 'method': 'PUT', 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}
                {% include 'MBHPackageBundle:Package:actions.html.twig' with {'entity': package} %}
            {{ form_end(form) }}

            {% include 'MBHBaseBundle:Partials:entityInfo.html.twig' with {'entity': entity, 'logs': logs} %}
        </div>
    </div>

{% endblock %}

