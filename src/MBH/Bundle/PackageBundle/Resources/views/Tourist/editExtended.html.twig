{% extends 'MBHPackageBundle:Tourist:layout.html.twig' %}

{% set small_title = "редактирование гостя #" ~ entity.id %}

{% block content %}
    {% include 'MBHPackageBundle:Tourist:tabs.html.twig' with {'active': 2, 'entity': entity} %}

    {{ form_start(form, {'action': path('tourist_update', {'id': entity.id}), 'method': 'PUT', 'attr': {'class': 'form-horizontal'}}) }}
    {{ form_widget(form) }}
    {% include 'MBHBaseBundle:Actions:update.html.twig' with {'entity': entity, 'delete_route': 'tourist_delete' } %}
    {{ form_end(form) }}

    <!-- DELETE -->
    <div class="alert alert-warning package-main-info">
        {% if entity.note %}
            {% for k in entity.note|split(';') %}
                {% set v = k|split('=') %}
                <strong>{{ v[0] }}</strong> - {{ v[1] }}<br>
            {% endfor %}
        {% endif %}
    </div>
    <!-- DELETE -->

    {% include 'MBHBaseBundle:Partials:entityInfo.html.twig' with {'entity': entity, 'logs': logs, 'delete_route': 'tourist_delete' } %}
{% endblock %}
