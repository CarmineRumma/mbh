{% extends 'MBHPackageBundle:Tourist:layout.html.twig' %}

{% set small_title = 'mbhpackagebundle.view.tourist.index.spisokkliyentov'|trans %}
{% set layout = 'box' %}

{% block content %}

    {% embed 'MBHBaseBundle:Partials:embed_filter.html.twig' with {'id': 'tourist-filter-widget'} %}
        {% block content %}
            {{ form_start(form, {attr: {class: 'form-inline filter-form icon-label-form', id: 'tourist-form'}}) }}
            <div class="form-group">
                <label><i class="fa fa-calendar" title='{{ 'mbhpackagebundle.view.tourist.index.daty'|trans }} ' data-toggle='tooltip'></i></label>
                {{ form_widget(form.begin, {attr: {class: 'datepicker begin-datepicker'}}) }} —
                {{ form_widget(form.end, {attr: {class: 'datepicker end-datepicker'}}) }}
            </div>
            <div class="form-group">
                {% include 'MBHBaseBundle:Partials:datepickerPeriodSelect.html.twig' %}
            </div>
            <div class="form-group">
                <label><i class="fa fa-male" title="{{ 'mbhpackagebundle.view.tourist.index.inostrannyyegrazhdane'|trans }} " data-toggle="tooltip"></i></label>
                {{ form_widget(form.citizenship) }}
                {{ form_widget(form._token) }}
                {{ form_rest(form.search) }}
            </div>
            {{ form_end(form, {render_rest: false}) }}
        {% endblock %}
    {% endembed %}

    <table id="tourist-table"
           class="table not-auto-datatable table-striped table-hover table-condensed table-icons table-actions">
        <thead>
        <tr>
            <th class="td-xxs"></th>
            <th class="td-xxs text-center">#</th>
            <th>{{ 'mbhpackagebundle.view.tourist.index.fio'|trans }} </th>
            <th class="td-md show-on-print">{{ 'mbhpackagebundle.view.tourist.index.osnovnoydokument'|trans }} </th>
            <th class="td-md show-on-print">{{ 'mbhpackagebundle.view.tourist.index.viza'|trans }} </th>
            <th class="td-md show-on-print">{{ 'mbhpackagebundle.view.tourist.index.migratsionnayakarta'|trans }} </th>
            <th class="td-xxs hide-on-print"><i title="{{ 'mbhpackagebundle.view.tourist.index.dokumenty'|trans }} " class="fa fa-book"></i></th>
            {#<th class="td-md">№ {{ 'mbhpackagebundle.view.tourist.index.pasporta'|trans }} </th>
            <th class="td-md">{{ 'mbhpackagebundle.view.tourist.index.viza'|trans }} </th>#}
            <th class="td-md">{{ 'mbhpackagebundle.view.tourist.index.daty'|trans }} </th>
            <th class="td-xs">{{ 'mbhpackagebundle.view.tourist.index.komnata'|trans }} </th>
            <th class="td-md show-on-print">{{ 'mbhpackagebundle.view.tourist.index.tselʹpriyezda'|trans }} </th>
            <th class="td-md show-on-print">{{ 'mbhpackagebundle.view.tourist.index.adres'|trans }} </th>
            <th class="td-md hide-on-print">{{ 'mbhpackagebundle.view.tourist.index.datarozhdeniya'|trans }} </th>
            <th class="td-md">{{ 'mbhpackagebundle.view.tourist.index.kontakty'|trans }} </th>
            <th class="td-sm"></th>
        </tr>
        </thead>
        <tbody>
        </tbody>
    </table>


    {% include 'MBHBaseBundle:Actions:list.html.twig' with {'route': 'tourist_new', 'role': 'tourist'} %}

{% endblock %} 

