                .description {
                    width: 900px;
                }

                .description .text {
                    font-size: 14px;
                    float: left;
                    line-height: 1.3;
                }

                .description .square {
                    font-size: 14px;
                    text-align: center;
                    padding-top: 10px;
                    border: solid;
                    height: 80px;
                    width: 120px;
                    float: right;
                }

                .description .agree {
                    font-style: italic;
                    font-size: 15px;
                    float: left;
                    font-weight: bold;
                    margin-top: 30px;
                }

                .description .agree .fields {
                    display: inline-block;
                }

                .description .agree .fields div {
                    display: inline-block;
                    margin-right: 5px;
                }

                .description .agree div:last-child {
                    margin-right: 0px;
                }
