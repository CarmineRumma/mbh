                    {{ 'mbhpackagebundle.view.documents.pdftemplates.registration_card.za.sokhrannostʹ.deneg.i.tsennykh.veshchey.ne.sdannykh.na.khraneniye.administratsiya.gostinitsy.otvetstvennosti'|trans }} 
