{% extends 'MBHPackageBundle:Documents/pdfTemplates:layout.html.twig' %}
{% block document %}
    <style>
        body{
            font-size: 14.5px;
        }
    </style>
{% for tourist in tourists %}
    {% for i in 1..2 %}
        <h3 class="center">{{ 'mbhpackagebundle.view.documents.pdftemplates.receipt.raspiska'|trans }} </h3>
        <div>
            <p>{{ 'package.resources.views.i'|trans }}, <strong>{% if tourist %}{{ tourist.generateFullName }}{% endif %}</strong></p>
            <p>
                {{ 'package.resources.views.birthday'|trans }} <span class="area" style="display: inline-block; width: 90px">{% if tourist and tourist.birthday %}{{ tourist.birthday|date('d.m.Y') }}{% endif %}</span> {{ 'package.resources.views.g'|trans }},
            </p>

            <p>
                {{ 'package.resources.views.document_view'|trans }} <span class="area" style="display: inline-block; width: 350px">{% if tourist and tourist.documentRelation %}{{ vegaDocumentTypes[tourist.documentRelation.type] }}{% endif %}</span>
                {{ 'package.resources.views.series'|trans }} <span class="area" style="display: inline-block; width: 125px">{% if tourist and tourist.documentRelation %}{{ tourist.documentRelation.series }}{% endif %}</span>
                {{ 'package.resources.views.number'|trans }} <span class="area" style="display: inline-block; width: 125px">{% if tourist and tourist.documentRelation %}{{ tourist.documentRelation.number }}{% endif %}</span>
            </p>

            <p>
                {{ 'package.resources.views.issued'|trans }} <span class="area" style="display: inline-block; width: 90px">{% if tourist and tourist.documentRelation %}{{ tourist.documentRelation.issued|date('d.m.Y') }}{% endif %}</span> {{ 'package.resources.views.g'|trans }},
                {{ 'package.resources.views.place_of_birth'|trans }} <span class="area" style="display: inline-block; width: 505px">
                    &nbsp {% if tourist and tourist.birthPlace %}
                        {{ tourist.birthPlace.country }}
                        {{ tourist.birthPlace.mainRegion }}
                        {{ tourist.birthPlace.city }}
                        {{ tourist.birthPlace.district }}
                    {% endif %}
                </span>
            </p>

            <!--<div>
                <div style="float: left; display: inline-block; width: 30%">
                    <div style="display: inline-block;">выданный</div>
                    <div style="width: 60%; display: inline-block;" class="area"></div> г.,
                </div>
                <div style="display: inline-block; width: 70%">
                    Место рождения
                    <div style="width: 70%; display: inline-block;" class="area"></div>
                </div>
                <div style="clear:both;"></div>
            </div>-->

            <p>
                {{ 'package.resources.views.citizenship'|trans }} <span class="area" style="display: inline-block; width: 300px">{% if tourist %}{{ tourist.citizenship }}{% endif %}</span>
            </p>
            <div>
                <div style="float: left; width: 240px">
                    {{ 'package.resources.views.permanent_residence'|trans }}
                </div>
                <div style="display: inline-block">
                <span class="area" style="display: inline-block; width: 580px">
                    {% set decomposedAddress = null %}
                    {% if tourist %}
                        {% set decomposedAddress = tourist.addressObjectDecomposed %}
                    {% endif %}
                    {% if decomposedAddress and decomposedAddress.country and decomposedAddress.city %}
                        {{ decomposedAddress.country ~ ' ' ~ decomposedAddress.city ~ ' ' ~ decomposedAddress.settlement }}
                        {% if decomposedAddress.street %} {{ 'mbhpackagebundle.view.documents.pdftemplates.ul'|trans }}. {{  decomposedAddress.street }}
                            {% if decomposedAddress.house %}
                                {{ 'mbhpackagebundle.view.documents.pdftemplates.d'|trans }}. {{ decomposedAddress.house }}
                                {% if decomposedAddress.corpus %}
                                    ({{ decomposedAddress.corpus }})
                                {% endif %}
                                {% if decomposedAddress.flat %}
                                    {{ 'packages.rewources.kv'|trans }}. {{ decomposedAddress.flat }}
                                {% endif %}
                            {% endif %}
                        {% endif %}
                    {% endif %}
                </span>
                    <div style="font-size: 15px; font-weight: normal;">{{ 'package.resources.views.g_obl_kr_ul_d'|trans }}</div>
                </div>
            </div>
            <p>{{ 'package.resources.period_live'|trans }} <strong>{{ entity.begin|date('d.m.Y') }}</strong> {{ 'package.resources.g_po'|trans }} <strong>{{ entity.end|date('d.m.Y') }}</strong> {{ 'package.resources.gg'|trans }}</p>
            <p>
            <div style="float: left; width: 350px">
                {{ 'package.resources.my_appartment_at'|trans }}:
            </div>
            <div style="display: inline-block">
                <span class="area" style="display: inline-block; width: 470px">
                    {% if entity.accommodation and entity.accommodation.housing and entity.accommodation.housing.city and entity.accommodation.housing.address %}
                        {{ entity.accommodation.housing.city }} {{ entity.accommodation.housing.address }}
                    {% elseif entity.roomType.hotel.city and entity.roomType.hotel.street %}
                        {{ entity.roomType.hotel.city }}
                        {{ entity.roomType.hotel.street }}
                        {% if entity.roomType.hotel.house %}
                            д.{{ entity.roomType.hotel.house }}
                            {% if entity.roomType.hotel.house %}
                                {{ entity.roomType.hotel.corpus }}
                            {% endif %}
                        {% endif %}
                    {% endif %}
                </span>
                <div style="font-size: 15px; font-weight: normal;">{{ 'package.resources.ul_d_korp_kv'|trans }} </div>
            </div>
            </p>
            <div style="white-space: pre;"><span style="text-decoration: underline;font-weight: bold">{{ 'package.resources.undertake'|trans }}:</span>
                -   {{ 'package.resources.not_produce_noise'|trans }};
                -   {{ 'package.resources.do_not_poll_entrances_and_surrounding_territory'|trans }};
                -   {{ 'package.resources.do_not_disturb_neighbors'|trans }};
                -   {{ 'package.resources.do_not_spoil_objects_of_everyday_life_and_interior'|trans }};
                -   {{ 'package.resources.do_not_reshuffle_furniture'|trans }}
                -   {{ 'package.resources.do_not_store_or_use_explosive_or_flammable_objects'|trans }}.
               {{ 'package.resources.for_everything_that_happens_in_the_apartment_i_have_provided_for_the_period_of_residence_i_am_carrying'|trans }}.
            </div>
            <div>
                <div style="float: left;">
                    <div class="area" style="display: inline-block; width: 150px"></div>
                    ({{ 'paclages.resources.signature'|trans }})
                </div>
                <div style="float: right; font-weight: bold">
                    15.06.2015 {{ 'package.resources.gg'|trans }}.
                </div>
                <div style="clear:both;"></div>
            </div>
        </div>
        {% if loop.index < 2 %}
            <hr/>
        {% endif %}
    {% endfor %}


    {% if loop.index < tourists|length %}
        <div style="page-break-after: always;"></div>
    {% endif %}
{% endfor %}
{% endblock %}