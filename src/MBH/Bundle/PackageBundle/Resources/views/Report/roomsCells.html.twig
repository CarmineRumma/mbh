{% if roomType %}{% set id = roomType.id %}{% else %}{% set id = 'all' %}{% endif %}
<tr>
    <td class="text-center" colspan="37">
        <small><strong>{{ title }} {% if tariff %}({{ tariff }}){% endif %}</strong></small>
    </td>
</tr>
<tr>
    <td class="text-center">
        <small><strong><i data-toggle="tooltip" title="Всего номеров" class="fa fa-home"></i></strong></small>
    </td>
    {% for date in period %}
        <td class="text-center cell {% if date == begin %}chosen{% elseif date|date('N') >= 6 %}weekend{% endif %}">
            <small>{{ roomsInfo[id][date|date('d.m.Y')].all }}</small>
        </td>
    {% endfor %}
</tr>
<tr>
    <td class="text-center">
        <small><strong><i data-toggle="tooltip" title="Занято номеров" class="fa fa-home text-success"></i></strong></small>
    </td>
    {% for date in period %}
        <td class="text-center cell {% if date == begin %}chosen{% elseif date|date('N') >= 6 %}weekend{% endif %}">
            <small class="text-success">{{ roomsInfo[id][date|date('d.m.Y')].occupied }}</small>
        </td>
    {% endfor %}
</tr>
<tr>
    <td class="text-center">
        <small><strong><i data-toggle="tooltip" title="Свободно номеров" class="fa fa-home text-danger"></i></strong></small>
    </td>
    {% for date in period %}
        <td class="text-center cell {% if date == begin %}chosen{% elseif date|date('N') >= 6 %}weekend{% endif %}">
            <small class="text-danger">{{ roomsInfo[id][date|date('d.m.Y')].free }}</small>
        </td>
    {% endfor %}
</tr>