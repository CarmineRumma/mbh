{% set boxtitle = 'Генерация' %}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Генерация документа</h4>
        </div>
        <div class="modal-body">
            {% form_theme form 'MBHPackageBundle:Documents:modalFormFields.html.twig' %}
            {{ form_start(form, {'action': path('package_csv'), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                <button type="submit" class="btn btn-primary">Сгенерировать</button>
            </div>
            {{ form_end(form) }}

        </div>

    </div>
</div>
