<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><button class="close" type="button" data-dismiss="modal">×</button>
                <h4 class="modal-title">Причина улаления</h4>
            </div>
            <form class="form-horizontal col-sm-12">
                <input id="package_id" value="{{ id }}" type="hidden"/>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Причина</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            <select id="select_reasons" class="form-control js-select" style="width: 100%">
                                {% for reason in reasons %}
                                    <option value="{{ reason.id }}">{{ reason.fullTitle }}</option>
                                {% endfor %}
                            </select>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass" class="col-sm-2 control-label">Комментарий</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="comment-textarea" rows="3"></textarea>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button class="btn btn-default" type="button" data-dismiss="modal">Закрыть</button>
                <button class="btn btn-primary btn-delete" type="button">Удалить</button>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function() {
            $(".js-select").select2();
        });

        $('button.btn-delete').click(function () {
            var array = {
                'select_reasons': $('#select_reasons').val(),
                'comment': $('#comment-textarea').val()
            };

            $.ajax({
                url: Routing.generate('delete_package', {'id': $('#package_id').val()}, true),
                type: "GET",
                data: array,
                dataType: "json",
                success: function (urlFromController) {
                    window.location.href = urlFromController;
                   // location.reload();
                }
            });
        });
    </script>
</div>