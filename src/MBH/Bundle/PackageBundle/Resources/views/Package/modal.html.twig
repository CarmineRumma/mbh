<div id="myModal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header"><button class="close" type="button" data-dismiss="modal">×</button>
                <h4 class="modal-title">Причина улаления</h4>
            </div>
            <form class="form-horizontal col-sm-12">
                <input id="package_id" value="{{ id }}" type="hidden"/>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Причина</label>
                    <div class="col-sm-10">
                        <p class="form-control-static">
                            <select class="form-control js-select" style="width: 100%">
                                {% for reason in reasons %}
                                    <option>{{ reason.fullTitle }}</option>
                                {% endfor %}
                            </select>
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label for="pass" class="col-sm-2 control-label">Комментарий</label>
                    <div class="col-sm-10">
                        <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
                    </div>
                </div>
            </form>
            <div class="modal-footer">
                <button class="btn btn-primary" type="button">Удалить</button>
                <button class="btn btn-default" type="button" data-dismiss="modal">Закрыть</button>
            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(document).ready(function() {
            $(".js-select").select2();
        });
