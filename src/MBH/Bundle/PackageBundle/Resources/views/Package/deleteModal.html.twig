<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">{{ 'modal.form.delete.reasons.confirmation'|trans({}, 'MBHPackageBundle') }}</h4>
        </div>
        <div class="modal-body">
            {% form_theme form 'MBHPackageBundle:Documents:modalFormFields.html.twig' %}
            {{ form_start(form, {'action': path('package_delete', { 'id': package.id }), 'method': 'POST', 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'modal.form.delete.reasons.close'|trans({}, 'MBHPackageBundle') }}</button>
                <button type="submit" class="btn btn-primary">{{ 'modal.form.delete.reasons.delete'|trans({}, 'MBHPackageBundle') }}</button>
            </div>
            {{ form_end(form) }}

        </div>

    </div>
</div>

