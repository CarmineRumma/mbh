{% extends 'MBHClientBundle:DocumentTemplate:layout.html.twig' %}

{% set small_title = 'views.documentTempalte.new'|trans({}, 'MBHClientBundle') %}

{% block content %}

    {{ form_start(form, {'attr': {'class': 'form-horizontal' }}) }}
    {{ form_widget(form) }}
    {% include 'MBHBaseBundle:Actions:new.html.twig' with {'save_close' : false} %}
    {{ form_end(form) }}

{% endblock %}

{% block scripts %}
    {{ parent() }}
    <script src="//tinymce.cachefly.net/4.0/tinymce.min.js"></script>

    <script>
        tinymce.init({
            selector: "#{{ form.content.vars.id }}",
            //language: "{{ app.request.locale }}",
            plugins: [
                "advlist autolink lists link image charmap print preview anchor",
                "searchreplace visualblocks code fullscreen",
                "insertdatetime media table contextmenu paste"
            ],
            toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent"
        });
    </script>
{% endblock %}