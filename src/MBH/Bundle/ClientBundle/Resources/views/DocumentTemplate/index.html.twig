{% extends 'MBHClientBundle:DocumentTemplate:layout.html.twig' %}

{% set small_title = "список" %}
{% set layout = "box" %}

{% block content %}

    <table class="table table-striped table-hover table-condensed table-icons table-actions">
        <thead>
        <tr>
            <th class="td-xs"></th>
            <th>Название</th>
            <th>Отель</th>
            <th>Организация</th>
            <th class="td-sm"></th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td class="text-center table-icon"><i class="fa fa-file"></i></td>
                <td>
                    {% embed 'MBHBaseBundle:Actions:entry_link.html.twig' with {'entity': entity, 'route': 'document_templates'}%}{% endembed %}
                </td>
                <td>{{ entity.hotel ? entity.hotel : 'Все отели' }}</td>
                <td>{{ entity.organization }}</td>
                <td class="table-actions-td text-center">
                    {% embed 'MBHBaseBundle:Actions:entry_actions.html.twig'
                    with {'entity': entity, 'route': 'document_templates'} %}{% endembed %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'MBHBaseBundle:Actions:list.html.twig' with {'route': 'document_templates_new', 'role': 'DOCUMENT_TEMPLATES'} %}

{% endblock %}
