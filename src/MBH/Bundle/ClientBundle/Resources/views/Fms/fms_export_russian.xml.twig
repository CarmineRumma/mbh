<f5:form5 xmlns="http://umms.fms.gov.ru/replication/core" schemaVersion="1.0"
          xmlns:f5="http://umms.fms.gov.ru/replication/hotel/form5">
    <f5:personDataDocument>
        <person>
            <lastName>{{ tourist.lastName }}</lastName>
            <firstName>{{ tourist.firstName }}</firstName>
            <middleName>{{ tourist.patronymic }}</middleName>
            <gender>
                <type>Gender</type>
                <element>{{ tourist.sex == 'female' ? 'M' : 'F' }}</element>
            </gender>
            <birthDate>{{ tourist.birthday|date('d.m.Y') }}</birthDate>
            <citizenship>
                <type>Citizenship</type>
                {#Здесь должен быть alpha3 code#}
                <element>{{ tourist.citizenship }}RUS</element>
            </citizenship>
            <birthPlace>
                <country>
                    <type>Country</type>
                    {#Здесь должен быть alpha3 code#}
                    <element>{{ tourist.birthplace.country }}SUN</element>
                </country>
                <place>{{ tourist.birthplace.mainRegion.name }}</place>
                <place2>{{ tourist.birthplace.district }}</place2>
                <place3>{{ tourist.birthplace.city }}</place3>
                <place4>{{ tourist.birthplace.settlement }}</place4>
            </birthPlace>
        </person>
        <document>
            <type>
                <type>DocumentType</type>
                {#Тип документа. Справочник dict_documenttype (ID).#}
                <element>103008</element>
            </type>
            <series>{{ tourist.documentRelation.series }}</series>
            <number>{{ tourist.documentRelation.number }}</number>
            {#Кем выдан. Для Паспорта РФ - справочник dict_officialorgan_fms (ID);
            для остальных документов – строка: <authority>выдан кем-то</authority>#}
            <authorityOrgan>
                <type>officialOrgan</type>
                <element>7747</element>
            </authorityOrgan>
            <issued>{{ tourist.documentRelation.issued|date('Y-m-d') }}</issued>
            <validFrom>{{ tourist.documentRelation.expiry|date('Y-m-d') }}</validFrom>
            <validTo>{{ tourist.documentRelation.expiry|date('Y-m-d') }}</validTo>
        </document>
    </f5:personDataDocument>
    <f5:livingAddress>
        <russianAddress>
            {#Строковое представление адреса (элементы заполнять в соответствии со справочником ФИАС): Регион$Район$Город$Населенный Пункт$Городской район$Улица#}
            <addressObjectString>Новосибирская обл$$Новосибирск г$$$Саввы Кожевникова ул</addressObjectString>
            <housing>
                <type>
                    <type>addressObjectType</type>
                    <element>1202</element>
                </type>
                <value>{{ tourist.addressObjectDecomposed.house }}</value>
            </housing>
            <housing>
                <type>
                    <type>addressObjectType</type>
                    <element>1304</element>
                </type>
                <value>{{ tourist.addressObjectDecomposed.flat }}</value>
            </housing>
            <housing>
                <type>
                    <type>addressObjectType</type>
                    <element>1203</element>
                </type>
                <value>{{ tourist.addressObjectDecomposed.corpus }}</value>
            </housing>
            <housing>
                <type>
                    <type>addressObjectType</type>
                    <element>1204</element>
                </type>
                <value>строение</value>
            </housing>
        </russianAddress>
    </f5:livingAddress>
    <f5:stayPeriod>
        <dateFrom>{{ package.begin|date('Y-m-d') }}</dateFrom>
        <dateTo>{{ package.end|date('Y-m-d') }}</dateTo>
    </f5:stayPeriod>

    {#<f5:hotelInfo>#}
        {#<f5:organization>#}
            {#<uid>7DEE537D-58EE-4685-A7EC-442A5CB6FE38</uid>#}
            {#<inn>0000000000</inn>#}
            {#<name>Первый отель Х</name>#}
            {#<address>#}
                {#<address>#}
                    {#<russianAddress>#}
                        {#<addressObjectString>Свердловская обл$$Екатеринбург г$$$Малышева пл</addressObjectString>#}
                        {#<housing>#}
                            {#<type>#}
                                {#<type>addressObjectType</type>#}
                                {#<element>1202</element>#}
                            {#</type>#}
                            {#<value>56</value>#}
                        {#</housing>#}
                    {#</russianAddress>#}
                {#</address>#}
            {#</address>#}
            {#<headOrganization>true</headOrganization>#}
        {#</f5:organization>#}
    {#</f5:hotelInfo>#}
</f5:form5>