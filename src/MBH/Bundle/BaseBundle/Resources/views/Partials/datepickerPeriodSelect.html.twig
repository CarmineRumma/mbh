<div class="input">
    &nbsp;<i class="fa fa-clock-o" data-toggle="tooltip" data-placement="top" title="{{ 'mbhbasebundle.view.partials.datepickerperiodselect.period'|trans }} "></i>&nbsp;
    <select class="datepicker-period-select" data-placeholder="{{ 'mbhbasebundle.view.partials.datepickerperiodselect.period'|trans }} " placeholder="{{ 'mbhbasebundle.view.partials.datepickerperiodselect.period'|trans }} ">
        <option></option>
        <option value="{{ 'now'|date_modify('-1 day')|date('d.m.Y') }}-{{ 'now'|date_modify('-1 day')|date('d.m.Y') }}">
            вчера
        </option>
        <option value="{{ 'now'|date('d.m.Y') }}-{{ 'now'|date('d.m.Y') }}">
            сегодня
        </option>
        <option value="{{ 'now'|date_modify('+1 day')|date('d.m.Y') }}-{{ 'now'|date_modify('+1 day')|date('d.m.Y') }}">
            завтра
        </option>
        <option value="{{ 'now'|date_modify('-7 days')|date('d.m.Y') }}-{{ 'now'|date('d.m.Y') }}">
            неделя
        </option>
        <option value="{{ 'now'|date_modify('-1 month')|date('d.m.Y') }}-{{ 'now'|date('d.m.Y') }}">
            месяц
        </option>
    </select>
</div>