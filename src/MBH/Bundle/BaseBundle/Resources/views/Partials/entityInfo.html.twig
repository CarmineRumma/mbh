<div class="panel panel-default created-info">

    <div class="panel-body">

        <ul class="nav nav-tabs">
            <li class="active"><a href="#entity-info" data-toggle="tab"><i class="fa fa-info-circle"></i> Информация</a></li>
            <li><a href="#entity-logs" data-toggle="tab"><i class="fa fa-clock-o"></i> История изменений</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane fade in active" id="entity-info">
                Создана {{entity.createdAt|date('d.m.Y H:i')}} пользователем {{ entity.createdBy}}
                {% if entity.updatedAt != null and  entity.getUpdatedBy != null%}
                    <br />Изменена {{entity.updatedAt|date('d.m.Y H:i')}} пользователем {{entity.updatedBy}}
                {% endif %}
            </div>
            <div class="tab-pane fade"  id="entity-logs">
                {% if logs is empty %}
                    <p>Изменений не производилось</p>
                {% else %}
                    <table class="table table-striped table-hover table-condensed without-fixed-header without-table-tools">
                        <thead>
                            <tr>
                                <th class="td-md">Дата</th>
                                <th class="td-md">Пользователь</th>
                                <th>Изменения</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for log in logs %}
                                <tr>
                                    <td>{{ log.loggedAt|date('d.m.Y H:i:s') }}</td>
                                    <td>{{ log.username }}</td>
                                    <td>
                                        {% for name, change in log.data %}
                                            <p><strong>{{name}}</strong>: 
                                                {% if change is iterable%}
                                                    {{ change|join(', ') }}
                                                {% elseif change.timestamp is defined %}
                                                    {{ change|date('d.m.Y H:i:s') }}
                                                {% elseif change is empty %}
                                                    -
                                                {% else %}
                                                    {{ change }}
                                                {% endif %}
                                            </p>
                                        {% endfor %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>
        </div>

    </div>
</div>