{% extends 'MBHHotelBundle:Hotel:layout.html.twig' %}

{% set small_title = "cписок" %}    

{% block content %}

    <table class="table table-striped table-hover table-condensed table-icons table-actions">
        <thead>
            <tr>
                <th class="td-xs"></th>
                <th>Название</th>
                <th class="td-md text-center">Префикс</th>
                <th class="td-md text-center">Дни продажи</th>
                <th class="td-md text-center">Выбран по умолчанию</th>
                <th class="td-sm"></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="text-center table-icon"><i class="fa fa-building"></i></td>
                    <td>
                        <a href="{{ path('hotel_edit', { 'id': entity.id }) }}" rel="main" title="Редактирование записи" data-toggle="tooltip">{{ entity.name }}</a>
                    </td>
                    <td class="text-center">{{ entity.prefix }}</td>
                    <td class="text-center">{{ entity.saleDays }}</td>
                    <td class="text-center">
                        {% if entity.isDefault %}
                            <span class="label label-success">Да</span>
                        {% endif %}
                    </td>
                    <td class="table-actions-td text-center">
                        <a href="{{ path('hotel_edit', { 'id': entity.id }) }}" class="btn btn-success btn-xs" title="Редактирование записи" data-toggle="tooltip">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="{{ path('hotel_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-xs delete-link " title="Удаление записи" data-toggle="tooltip">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% include 'MBHBaseBundle:Actions:list.html.twig' with {'route': 'hotel_new'} %}

{% endblock %} 
