{% extends 'MBHHotelBundle:Hotel:layout.html.twig' %}

{% set small_title = "список" %}
{% set layout = "box" %}

{% block content %}

        <table class="table table-striped table-hover table-condensed table-icons table-actions">
            <thead>
                <tr>
                    <th class="td-xs"></th>
                    <th>{{ 'views.hotel.index.name'|trans({}, 'MBHHotelBundle') }}</th>
                    <th class="td-md text-center">{{ 'views.hotel.index.prefix'|trans({}, 'MBHHotelBundle') }}</th>
                    <th class="td-md text-center">{{ 'views.hotel.index.chosen_by_default'|trans({}, 'MBHHotelBundle') }}</th>
                    <th class="td-sm"></th>
                </tr>
            </thead>
            <tbody>
                {% for entity in entities %}
                    <tr>
                        <td class="text-center table-icon"><i class="fa fa-home"></i></td>
                        <td>
                            <a href="{{ path('hotel_edit', { 'id': entity.id }) }}" rel="main" title= {{ 'views.hotel.index.edit_record'|trans({}, 'MBHHotelBundle') }} data-toggle="tooltip">{{ entity.name }}</a>
                        </td>
                        <td class="text-center">{{ entity.prefix }}</td>
                        <td class="text-center">
                            {% if entity.isDefault %}
                                <span class="label label-success">Да</span>
                            {% endif %}
                        </td>
                        <td class="table-actions-td text-center">
                            <a href="{{ path('hotel_edit', { 'id': entity.id }) }}" class="btn btn-success btn-xs" title={{ 'views.hotel.index.edit_record'|trans({}, 'MBHHotelBundle') }} data-toggle="tooltip">
                                <i class="fa fa-pencil-square-o"></i>
                            </a>
                            <a href="{{ path('hotel_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-xs delete-link " data-text="{{ 'views.hotel.index.confirm_delete'|trans({'%hotelname%': entity.name}, 'MBHHotelBundle') }}" title={{ 'views.hotel.index.delete_record'|trans({}, 'MBHHotelBundle') }} data-toggle="tooltip">
                                <i class="fa fa-trash-o"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

    {% include 'MBHBaseBundle:Actions:list.html.twig' with {'route': 'hotel_new', 'role': 'HOTEL'} %}

{% endblock %} 
