<div id="mbh-results-pay-form-wrapper">
    <form method="post" action="http://test.robokassa.ru/Index.aspx">
        <input type="hidden" name="MrchLogin" value="{{ config.robokassaMerchantLogin }}">
        <input type="hidden" name="OutSum" value="{{ total }}">
        <input type="hidden" name="InvId" value="{{ order.id }}">
        {% set sig = config.robokassaMerchantLogin ~ ':' ~ total ~':' ~ order.id ~ ':' ~ config.robokassaMerchantPass1 %}
        <input type="hidden" name="SignatureValue" value="{{ sig|mbh_md5 }}">

        <button id="mbh-results-pay-form-button" class="button" type="submit">
            <i class="fa fa-money"></i> {{ 'views.api.robokassa.make_payment_for_order_id'|trans({'%total%': total|number_format, '%order_id%': order.id } , 'MBHOnlineBundle') }}
        </button>
    </form>
</div>