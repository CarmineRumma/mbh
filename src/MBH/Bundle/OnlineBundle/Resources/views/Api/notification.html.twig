{% spaceless %}
    <h1 style="color:#00005a; font-size:19px; border-bottom: 1px solid #e1e1f9; margin:0 0 30px 0;padding:10px 0;font-family:Open Sans,Lucida Grande,Segoe UI,Arial,Verdana,Lucida Sans Unicode,Tahoma,Sans Serif;">
        {{ 'views.api.notification.new_reservations_made_with_online_form'|trans({}, 'MBHOnlineBundle') }}
    </h1>
    <table border="1" cellpadding="2" cellspacing="2">
        <tr>
            <th>{{ 'views.api.notification.hotel'|trans({}, 'MBHOnlineBundle') }}</th>
            <th>{{ 'views.api.notification.dates'|trans({}, 'MBHOnlineBundle') }}</th>
            <th>{{ 'views.api.notification.room_type'|trans({}, 'MBHOnlineBundle') }}</th>
            <th>Цена</th>
        </tr>
    <tbody>
    {% for package in packages %}
        <tr>
            <td>{{ package.roomType.hotel }}</td>
            <td>{{ package.begin|date('d.m.Y') }} - {{ package.end|date('d.m.Y') }}</td>
            <td>{{ package.roomType }}</td>
            <td>{{ package.price }} RUR</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
    {% set package = packages|first %}
    <p><strong>{{ 'views.api.notification.client'|trans({}, 'MBHOnlineBundle') }}</strong> {{ package.mainTourist.fullName }}. <strong>{{ 'views.api.notification.phone'|trans({}, 'MBHOnlineBundle') }}</strong> {{ package.mainTourist.phone }}</p>
{% endspaceless %}