{% extends 'MBHUserBundle:Group:layout.html.twig' %}

{% set small_title = 'user.index.small_title'|trans({}, 'FOSUserBundle') %}
{% set layout = "box" %}

{% block content %}

    <table class="table table-striped table-hover table-condensed table-icons table-actions">
        <thead>
            <tr>
                <th class="td-xs"></th>
                <th class="td-md">{{ 'group.name'|trans({}, 'FOSUserBundle') }}</th>
                <th>{{ 'index.permissions'|trans({}, 'FOSUserBundle') }}</th>
                <th class="td-sm"></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="text-center table-icon"><i class="fa fa-users"></i></td>
                    <td>
                        <a href="{{ path('group_edit', { 'id': entity.id }) }}" rel="main" title="{{ 'record.index.edit'|trans({}, 'FOSUserBundle') }}" data-toggle="tooltip">{{ entity.name|trans({}, 'FOSUserBundleRoles') }}</a>
                    </td>
                    <td>
                        {% for group in entity.roles %}<small>{% if loop.index0 > 0 %}, {% endif %}{{ group|trans({}, 'MBHUserBundleRoles') }}</small>{% endfor %}
                    </td>
                    <td class="table-actions-td text-center">
                        <a href="{{ path('group_edit', { 'id': entity.id }) }}" class="btn btn-success btn-xs" title={{ 'record.index.edit'|trans({}, 'FOSUserBundle') }} data-toggle="tooltip">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="{{ path('group_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-xs delete-link " title={{ 'record.index.remove'|trans({}, 'FOSUserBundle') }} data-toggle="tooltip">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% include 'MBHBaseBundle:Actions:list.html.twig' with {'route': 'group_new'} %}

{% endblock %} 
