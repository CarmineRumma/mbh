{% extends 'MBHUserBundle:User:layout.html.twig' %}

{% set small_title = "cписок" %}    

{% block content %}

    <table class="table table-striped table-hover table-condensed table-icons table-actions">
        <thead>
            <tr>
                <th class="td-xs"></th>
                <th>Логин</th>
                <th>Права</th>
                <th class="td-md">ФИО</th>
                <th class="td-md">Статус</th>
                <th class="td-sm"></th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr {% if entity.isEnabled != true or entity.isLocked == true %}class="warning"{% endif %}>
                    <td class="text-center table-icon"><i class="fa fa-user"></i></td>
                    <td>
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}" rel="main" title="Редактирование записи" data-toggle="tooltip">{{ entity.username }}</a>
                    </td>
                    <td>
                        {% for role in entity.roles %}{% if loop.index0 > 0 %}, {% endif %}{{ role|trans({}, 'MBHUserBundleRoles') }}{% endfor %}
                    </td>
                    <td>{{ entity.fullName(true) }}</td>
                    <td>
                        {% if entity.isEnabled != true or entity.isLocked == true %}
                            <span class="label label-danger">Отключен</span>
                        {% endif %}
                    </td>
                    <td class="table-actions-td text-center">
                        <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-success btn-xs" title="Редактирование записи" data-toggle="tooltip">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a href="{{ path('user_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-xs delete-link " title="Удаление записи" data-toggle="tooltip">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {% include 'MBHBaseBundle:Actions:list.html.twig' with {'route': 'user_new'} %}

{% endblock %} 
