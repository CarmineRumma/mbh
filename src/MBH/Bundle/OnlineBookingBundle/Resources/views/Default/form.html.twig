<form id="search-form" method="get" action="{{ requestSearchUrl }}">
    <div class="form-group">
        <label>Все пансионаты</label>
        <select name="hotel" class="form-control" id="hotel" placeholder="Все пансионаты">
            <option value="">Все пансионаты</option>
            {% for hotel in hotels %}
                <option {% if app.request.get('hotel') == hotel.id %}selected{% endif %} value="{{ hotel.id }}">{{ hotel }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <label>Все типы номеров</label>
        <select data-value="{{ app.request.get('roomType') }}" name="roomType" class="form-control" id="roomType" placeholder="Все типы номеров">
            <option value=""></option>
            {% for roomType in roomTypes %}
                <option data-hotel="{{ roomType.hotel.id }}" value="{{ roomType.id }}">{{ roomType }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <input type="text" required="required" name="begin" class="form-control" id="dateBegin" value="{{ app.request.get('begin') }}">
    </div>
    <div class="form-group">
        <input type="text" required="required" name="end" class="form-control" id="dateEnd" value="{{ app.request.get('end') }}">
    </div>
    <div class="form-group">
        <label>Взрослых: </label>
        <input type="number" min="0" max="6" step="1" required="required" name="adults" id="adults" value="{{ app.request.get('adults') }}" maxlength="1" class="form-control">
    </div>

    <div class="form-group">
        <label>Детей: </label>
        <input type="number" min="0" max="5" step="1" name="children" id="children" value="{{ app.request.get('children') }}" maxlength="1" class="form-control">
        <div id="children-icon" data-value="{{ app.request.get('children_age')|json_encode }}" style="visibility: hidden"></div>
    </div>

    <button type="submit" class="btn btn-info" id="btn-search"><i class="glyphicon glyphicon-search"></i> Найти</button>
</form>
<script src="{{ asset('bundles/mbhonlinebooking/js/form.js', null, true) }}"></script>
<link rel="stylesheet" href="{{ asset('bundles/mbhonlinebooking/css/form.css', null, true) }}">