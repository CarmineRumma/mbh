{% extends 'MBHPriceBundle:Tariff:layout.html.twig' %}

{% set small_title = "список" %}
{% set layout = 'box' %}

{% block content %}

    <table class="tariffs-table table table-striped table-hover table-condensed table-icons table-actions">
        <thead>
        <tr>
            <th class="td-xs"></th>
            <th>Название</th>
            <th class="td-sm text-center">Основной</th>
            <th class="td-sm text-center">Онлайн</th>
            <th class="td-sm"></th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr {% if entity.isEnabled is empty %} class="danger"{% endif %}>
                <td class="text-center table-icon"><i class="fa fa-sliders"></i></td>
                <td>
                    {% if is_granted('ROLE_TARIFF_EDIT') %}
                        <a href="{{ path('tariff_edit', { 'id': entity.id }) }}" rel="main" title="Редактирование записи" data-toggle="tooltip">{{ entity.name }}</a>
                    {% endif %}
                </td>
                <td class="text-center">
                    {% if entity.isDefault %}
                        <span class="label label-success">Да</span>
                    {% else %}
                        <span class="label label-default">Нет</span>
                    {% endif %}
                </td>
                <td class="text-center">
                    {% if entity.isOnline %}
                        <span class="label label-success">Да</span>
                    {% else %}
                        <span class="label label-default">Нет</span>
                    {% endif %}
                </td>
                <td class="table-actions-td text-right">
                    {% if is_granted('ROLE_TARIFF_EDIT') %}
                        <a href="{{ path('tariff_edit', { 'id': entity.id }) }}" class="btn btn-success btn-xs" title="Редактирование записи" data-toggle="tooltip">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                    {% endif %}
                    {% if entity.isDefault is empty and is_granted('ROLE_TARIFF_DELETE') %}
                        <a href="{{ path('tariff_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-xs delete-link" title="Удаление записи" data-toggle="tooltip">
                            <i class="fa fa-trash-o"></i>
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% include 'MBHBaseBundle:Actions:list.html.twig' with {'route': 'tariff_new', 'role': 'TARIFF'} %}

{% endblock %} 

