{% extends 'MBHPriceBundle:Overview:layout.html.twig' %}

{% set small_title = "обзор" %}

{% block content %}

    <div class="well" id="prices-overview-filter-well">
        <form id="prices-overview-filter" class="form-inline" role="form">
            <div class="input">
                <i class="fa fa-calendar" title='Даты' data-toggle='tooltip'></i>&nbsp
                <input type="text" id="prices-overview-filter-begin" class="datepicker prices-overview-filter begin-datepiker not-set-date form-control input-sm" data-date-format="dd.mm.yyyy" value="{{ 'now'|date('d.m.Y') }}">
            </div>
            <div class="input">
                - &nbsp
                <input type="text" id="prices-overview-filter-end" class="datepicker prices-overview-filter end-datepiker not-set-date form-control input-sm" data-date-format="dd.mm.yyyy" value="{{ 'now'|date_modify("+2 months")|date('d.m.Y') }}">
            </div>

            <div class="input">
                <i class="fa fa-home" title='Тип номера' data-toggle='tooltip'></i>&nbsp  <select multiple data-placeholder="Тип номера" id="prices-overview-filter-roomType" class="prices-overview-filter form-control input-sm">
                    <option></option>
                    {% for roomType in roomTypes %}
                        <option value="{{ roomType.id }}">{{ roomType.name }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="input">
                <i class="fa fa-sliders" title='Тариф' data-toggle='tooltip'></i>&nbsp  <select multiple data-placeholder="Тариф" id="prices-overview-filter-tariff" class="prices-overview-filter form-control input-sm">
                    {% for groupName, groupTariffs in tariffs %}
                        <optgroup label="{{ groupName }}">
                            {% for tariff in groupTariffs %}
                                <option value="{{ tariff.id }}">{{ tariff.name }}</option>
                            {% endfor %}
                        </optgroup>
                    {% endfor %}
                </select>
            </div>

        </form>

    </div>

    <form class="form-inline" action="{{ path('prices_overview_save') }}" method="POST" name="prices-overview-form" id="prices-overview-form">
        <div id="prices-overview-table-wrapper" class="scrolling"></div>
        
        <div id="actions" class="navbar navbar-default navbar-fixed-bottom">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li><button type="submit" name="save_close" class="btn btn-success navbar-btn"><i class="fa fa-check-square-o"></i> Сохранить</button></li>
                    <li><button type="button" onclick="location.href = '{{ path('cache', {'route': 'prices_overview'}) }}'" class="btn btn-info navbar-btn"><i class="fa fa-ruble"></i> Пересчитать цены</button></li>
                    <li><button type="button" onclick="location.href = '{{ title_url|default(path('_welcome'))}}'" class="btn btn-default navbar-btn"><i class="fa fa-ban"></i> Отмена</button></li>
                </ul>
            </div>
        </div>
    </form>

{% endblock %} 

