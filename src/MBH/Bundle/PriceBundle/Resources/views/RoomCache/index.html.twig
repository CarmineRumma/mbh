{% extends 'MBHPriceBundle:RoomCache:layout.html.twig' %}

{% set small_title = "обзор" %}
{% set layout = 'box' %}

{% block content %}

    {% include 'MBHBaseBundle:Partials:filter.html.twig' with {'id': 'room-cache-overview-filter-widget' } %}
        <form id="room-cache-overview-filter" class="form-inline filter-form remember" role="form">
            <div class="input">
                <i class="fa fa-calendar" title='Даты' data-toggle='tooltip'></i>&nbsp
                <input type="text" id="room-cache-overview-filter-begin" class="datepicker room-cache-overview-filter begin-datepicker mbh-daterangepicker not-set-date form-control input-sm" data-date-format="dd.mm.yyyy" value="{{ app.request.get('begin') is empty ? 'now'|date('d.m.Y') : app.request.get('begin') }}">
            </div>
            <div class="input hidden">
                - &nbsp
                <input type="text" id="room-cache-overview-filter-end" class="datepicker room-cache-overview-filter end-datepicker mbh-daterangepicker not-set-date form-control input-sm" data-date-format="dd.mm.yyyy" value="{{ app.request.get('end') is empty ? 'now'|date_modify("+45 days")|date('d.m.Y') : app.request.get('end') }}">
            </div>
            <div class="input">
                <i class="fa fa-bed" title='Тип номера' data-toggle='tooltip'></i>&nbsp  <select multiple data-placeholder="Тип номера" id="room-cache-overview-filter-roomType" class="room-cache-overview-filter form-control input-sm">
                    <option></option>
                    {% for roomType in roomTypes %}
                        <option value="{{ roomType.id }}" {% if roomType.id in app.request.get('roomTypes') and roomTypes|length != app.request.get('roomTypes')|length %}selected{% endif %}>{{ roomType.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="input">
                <i class="fa fa-sliders" title='Квоты по тарифам' data-toggle='tooltip'></i>&nbsp  <select multiple data-placeholder="Квоты по тарифам" id="room-cache-overview-filter-tariff" class="room-cache-overview-filter form-control input-sm">
                    <option></option>
                    {% for tariff in tariffs %}
                        <option value="{{ tariff.id }}" {% if tariff.id in app.request.get('tariffs') and tariffs|length != app.request.get('tariffs')|length %}selected{% endif %}>{{ tariff.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="input">
                    <i class="fa fa-bar-chart" title='График?' data-toggle='tooltip'></i>
                    &nbsp <input type="checkbox" id="room-cache-overview-filter-graph" class="room-cache-overview-filter" value="1"/>
                </div>
        </form>
    </div></div>

    <form class="form-inline" action="{{ path('room_cache_overview_save') }}" method="POST" name="room-cache-overview-form" id="room-cache-overview-form">
        <div id="room-cache-overview-table-wrapper" class="scrolling"></div>

        {% if is_granted('ROLE_ROOM_CACHE_EDIT') %}
        <div id="actions" class="navbar navbar-default navbar-fixed-bottom main-footer">
            <div class="container-fluid">
                <ul class="nav navbar-nav">
                    <li><button type="submit" name="save_close" class="btn btn-success navbar-btn"><i class="fa fa-check-square-o"></i> Сохранить</button></li>
                    <li><button type="button" onclick="location.href = '{{ path('room_cache_generator') }}'" class="btn btn-primary navbar-btn"><i class="fa fa-magic"></i> Генератор наличия мест</button></li>
                    <li><button type="button" onclick="location.href = '{{ path('room_cache_compare_1c') }}'" class="btn btn-warning navbar-btn"><i class="fa fa-balance-scale"></i> Сверка с 1С</button></li>
                    <li><button type="button" onclick="location.href = '{{ title_url|default(path('_welcome'))}}'" class="btn btn-default navbar-btn"><i class="fa fa-ban"></i> Отмена</button></li>
                </ul>
            </div>
        </div>
        {% endif %}
    </form>

{% endblock %} 

