{% extends 'MBHCashBundle:Cash:layout.html.twig' %}

{% set small_title = 'views.cash.index.document_list'|trans({}, 'MBHCashBundle') %}

{% block content %}

    <div class="well">
        <form class="form-inline" id="cash-filter-form" role="form">
            C <input type="text" id="begin" name="begin" class="datepicker begin-datepiker form-control input-sm" data-date-format="dd.mm.yyyy" value="">
            По <input type="text" id="end" name="end" class="datepicker end-datepiker form-control input-sm" data-date-format="dd.mm.yyyy" value="">
        </form>
    </div>
    
    <table id="cash-table" class="table not-auto-datatable table-striped table-hover table-condensed table-icons table-actions">
        <thead>
            <tr>
                <th class="td-xxs text-center"></th>
                <th class="td-xs text-center">{{ 'views.cash.index.reservation'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-md text-right">{{ 'views.cash.index.income'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-md text-right">{{ 'views.cash.index.expense'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-md">{{ 'views.cash.index.operation_type'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-xs">{{ 'views.cash.index.date'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-sm text-center">{{ 'views.cash.index.is_paid'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-sm">{{ 'views.cash.index.removed'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-sm"></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7" class="text-right">
                    <strong>{{ 'views.cash.index.income'|trans({}, 'MBHCashBundle') }}:</strong>&nbsp;<span id="cash-table-total-in"></span><br>
                    <strong>{{ 'views.cash.index.expense'|trans({}, 'MBHCashBundle') }}:</strong>&nbsp;<span id="cash-table-total-out"></span>
                </td>
            </tr>
        </tfoot>
    </table>

{% endblock %} 

