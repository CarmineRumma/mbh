{% extends 'MBHCashBundle:Cash:layout.html.twig' %}

{% set small_title = 'views.cash.index.document_list'|trans({}, 'MBHCashBundle') %}

{% block content %}

    <div class="well">
        <form class="form-inline" role="form">
            C <input type="text" id="begin" class="datepicker begin-datepiker form-control input-sm" data-date-format="dd.mm.yyyy" value="{{ "now"|date("d.m.Y") }}">
            По <input type="text" id="end" class="datepicker end-datepiker form-control input-sm" data-date-format="dd.mm.yyyy" value="{{ "now"|date_modify("+1 day")|date("d.m.Y")}}">
        </form>
    </div>
    
    <table id="cash-table" class="table not-auto-datatable table-striped table-hover table-condensed table-icons table-actions">
        <thead>
            <tr>
                <th class="td-xs"></th>
                <th class="td-sm">{{ 'views.cash.index.reservation'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-md">{{ 'views.cash.index.income'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-md">{{ 'views.cash.index.expense'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-md">{{ 'views.cash.index.payment_way'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-md">{{ 'views.cash.index.operation_type'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-md">{{ 'views.cash.index.date'|trans({}, 'MBHCashBundle') }}</th>
                <th class="td-sm"></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
        <tfoot>
            <tr>
                <td colspan="8" class="text-right">
                    <strong>{{ 'views.cash.index.income'|trans({}, 'MBHCashBundle') }}:</strong>&nbsp;<span id="cash-table-total-in"></span><br>
                    <strong>{{ 'views.cash.index.expense'|trans({}, 'MBHCashBundle') }}:</strong>&nbsp;<span id="cash-table-total-out"></span>
                </td>
            </tr>
        </tfoot>
    </table>

{% endblock %} 

