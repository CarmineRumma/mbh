{
    "draw" : "{{ draw }}",
    "recordsTotal": "{{ total }}",
    "totalIn": "{{ totalIn|number_format }}",
    "totalOut": "{{ totalOut|number_format }}",
    "recordsFiltered": "{{ total }}",
    "data": [
        {% for entity in entities %}
            [
                "<div class='text-center'><i class='fa fa-money'></i></div>",
                "<div class='text-center'>{{ entity.prefix }}</div>",
                "<div class='text-right'>{% if entity.operation != 'out' %}<a href='{{ path('cash_edit', { 'id': entity.id }) }}' rel='main' class='text-success' title='Редактирование записи' data-toggle='tooltip'>{{ entity.total|number_format }}</a>{% endif %}</div>",
                "<div class='text-right'>{% if entity.operation == 'out' %}<a href='{{ path('cash_edit', { 'id': entity.id }) }}' rel='main' class='text-danger' title='Редактирование записи' data-toggle='tooltip'>{{ entity.total|number_format }}</a>{% endif %}</div>",
                "{{ methods[entity.method] }}",
                "{{ operations[entity.operation] }}",
                "{{ entity.createdAt|date('d.m.Y') }}",
                "{% include 'MBHCashBundle:Cash:jsonButtons.html.twig' with {'entity': entity} %}"
            ]{% if loop.index != entities.count(true) %},{% endif %}
        {% endfor %}
    ]
}