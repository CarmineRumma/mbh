{% extends 'MBHChannelManagerBundle::layout.html.twig' %}

{% set small_title = 'views.channnelmanager.settings'|trans({}, 'MBHChannelManagerBundle')  %}
{% set layout = 'tabs' %}

{% set title = "TripAdvisor.com" %}
{% set title_url = path('tripadvisor') %}

{% block content %}
    <div class="tab-content">
        <div class="tab-pane active" id="home">
            {% form_theme form '@MBHHotel/Hotel/embeddedFormTheme.html.twig' %}
            {{ form_start(form, {'action': path('tripadvisor'), 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}
            {% include 'MBHChannelManagerBundle::actions.html.twig' %}
            {{ form_end(form) }}

            {%  if doc %}
                {% include 'MBHBaseBundle:Partials:entityInfo.html.twig' with {'entity': doc, 'logs': logs} %}
            {%  endif %}
        </div>
    </div>
{% endblock %}