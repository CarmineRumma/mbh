{% extends 'MBHChannelManagerBundle:TripAdvisor:layout.html.twig' %}

{% set title_url = path('tripadvisor') %}

{% block content %}
    {% if unfilledFieldsString is not empty %}
        <div class="alert alert-danger">
            <i class="fa fa-exclamation-circle"></i>&nbsp;
            {{ unfilledFieldsString|raw }}
        </div>
    {% endif %}
    {% include 'MBHChannelManagerBundle::tabs.html.twig' with {'active': 1, 'entity': doc, 'base': 'tripadvisor', 'services':false} %}
    <div class="tab-content">
        <div class="tab-pane active" id="home">
            {% form_theme form '@MBHHotel/Hotel/embeddedFormTheme.html.twig' %}
            {{ form_start(form, {'action': path('tripadvisor'), 'attr': {'class': 'form-horizontal'}}) }}
            {{ form_widget(form) }}
            {% include 'MBHChannelManagerBundle:TripAdvisor:actions.html.twig' with  {'isALlFieldsFilled' : unfilledFieldsString is empty} %}
            {{ form_end(form) }}

            {%  if doc %}
                {% include 'MBHBaseBundle:Partials:entityInfo.html.twig' with {'entity': doc, 'logs': logs} %}
            {%  endif %}
        </div>
    </div>
{% endblock %}