<?xml version="1.0" encoding="utf-8"?>
<request>
    {% include 'MBHChannelManagerBundle:Booking:credentials.xml.twig' with {'config': config } %}

    {% for roomId, room in rooms %}

        <room id="{{ roomId }}">
            {% for rateId, rate in rates %}
                {% if rate.rooms is empty or roomId in rate.rooms %}
                    <date from ="{{ 'now'|date('Y-m-d') }}" to="{{ 'now'|date_modify("+5 years")|date('Y-m-d') }}">
                        <rate id="{{ rateId }}" />
                        <closed>1</closed>
                    </date>
                {% endif %}
            {% endfor %}
        </room>
    {% endfor %}

</request>